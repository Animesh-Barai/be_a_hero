<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix,Autofill,LabelFor,InefficientWeight,RtlSymmetry,SmallSp,UseCompoundDrawables,HardcodedText,RtlHardcoded,ObsoleteLayoutParam,NestedWeights,ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:layout_alignParentTop="true"
            android:theme="@style/ArrowToolbarStyle"
            app:titleTextColor="@color/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/toolbar"
                app:fontFamily="@font/futura_heavy"
                android:textColor="@color/finestTextColor"
                android:paddingLeft="@dimen/spacing_large"
                android:text="@string/activity_register_donor"
                />

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar"
            android:padding="@dimen/spacing_large">

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="Name"
                android:textSize="16sp"
                android:inputType="text"
                app:fontFamily="@font/futura_medium_bt"
                android:paddingTop="@dimen/spacing_mxlarge"
                android:paddingLeft="@dimen/spacing_xlarge"
                android:paddingRight="@dimen/spacing_xlarge"
                android:paddingBottom="@dimen/spacing_mxlarge"
                android:background="@drawable/rect_silver_background"
                />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="Email"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                app:fontFamily="@font/futura_medium_bt"
                android:paddingTop="@dimen/spacing_mxlarge"
                android:paddingLeft="@dimen/spacing_xlarge"
                android:paddingRight="@dimen/spacing_xlarge"
                android:paddingBottom="@dimen/spacing_mxlarge"
                android:layout_marginTop="@dimen/spacing_large"
                android:background="@drawable/rect_silver_background"
                />

            <TextView
                android:id="@+id/input_country_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="@dimen/spacing_large"
                app:fontFamily="@font/futura_medium_bt"
                android:textColor="@color/finestTextColor"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_mmiddle"
                android:paddingBottom="@dimen/spacing_mmiddle">

                <ImageView
                    android:id="@+id/gender_male_imageview"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:tint="@color/finestSilver"
                    android:padding="@dimen/spacing_mmiddle"
                    app:srcCompat="@drawable/ic_male_avatar"
                    android:layout_toLeftOf="@+id/gender_divider"
                    android:background="@drawable/circle_silver_stroke"
                    />

                <View
                    android:id="@+id/gender_divider"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:background="@color/md_grey_400"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"/>

                <ImageView
                    android:id="@+id/gender_female_imageview"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:tint="@color/finestSilver"
                    android:padding="@dimen/spacing_mmiddle"
                    app:srcCompat="@drawable/ic_female_avatar"
                    android:layout_toRightOf="@+id/gender_divider"
                    android:background="@drawable/circle_silver_stroke"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Select Blood Group"
                android:padding="@dimen/spacing_large"
                app:fontFamily="@font/futura_medium_bt"
                android:textColor="@color/finestTextColor"
                />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/check_box_remember_me">

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:text="A+"
                    android:gravity="center"
                    android:padding="@dimen/spacing_large"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_button_selector"/>

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:text="A-"
                    android:gravity="center"
                    android:padding="@dimen/spacing_large"
                    android:button="@android:color/transparent"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:background="@drawable/radio_button_selector"/>

            </RadioGroup>

        </LinearLayout>

    </RelativeLayout>

</layout>
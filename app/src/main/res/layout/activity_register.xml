<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ContentDescription,HardcodedText">

    <LinearLayout
        android:id="@+id/layout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/curves_splash">

        <ImageView
            android:id="@+id/hand_image_vector"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/blood_transfusion_3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/curved_semi_circle_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login &amp; Register"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                app:fontFamily="@fonts/montserrat_medium"
                android:textColor="@color/finestTextColor"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                android:layout_marginBottom="@dimen/spacing_xxlarge"/>

            <com.be_a_hero.app.widget.MaterialRippleLayout
                style="@style/RippleStyleWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minWidth="250dp"
                    android:paddingLeft="@dimen/spacing_mlarge"
                    android:paddingRight="@dimen/spacing_mlarge"
                    android:paddingTop="@dimen/spacing_xmlarge"
                    android:paddingBottom="@dimen/spacing_xmlarge"
                    android:background="@drawable/blue_round_button">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_facebook"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginRight="@dimen/spacing_large"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Facebook"
                        android:gravity="center"
                        android:textColor="@color/white"
                        app:fontFamily="@fonts/montserrat_regular"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginRight="@dimen/spacing_large" />

                </LinearLayout>

            </com.be_a_hero.app.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large"/>

            <com.be_a_hero.app.widget.MaterialRippleLayout
                style="@style/RippleStyleWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minWidth="250dp"
                    android:paddingLeft="@dimen/spacing_mlarge"
                    android:paddingRight="@dimen/spacing_mlarge"
                    android:paddingTop="@dimen/spacing_xmlarge"
                    android:paddingBottom="@dimen/spacing_xmlarge"
                    android:background="@drawable/grey_stroke_round_button">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_google"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginRight="@dimen/spacing_large"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Google"
                        android:gravity="center"
                        android:textColor="@color/finestTextColor"
                        app:fontFamily="@fonts/montserrat_regular"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginRight="@dimen/spacing_large" />

                </LinearLayout>

            </com.be_a_hero.app.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large"/>

            <com.be_a_hero.app.widget.MaterialRippleLayout
                style="@style/RippleStyleWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/mobile_phone_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minWidth="250dp"
                    android:paddingLeft="@dimen/spacing_mlarge"
                    android:paddingRight="@dimen/spacing_mlarge"
                    android:paddingTop="@dimen/spacing_xmlarge"
                    android:paddingBottom="@dimen/spacing_xmlarge"
                    android:background="@drawable/grey_stroke_round_button">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:tint="@color/md_grey_600"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginRight="@dimen/spacing_large"
                        android:src="@android:drawable/ic_dialog_dialer"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Mobile Number"
                        android:textColor="@color/finestTextColor"
                        app:fontFamily="@fonts/montserrat_regular"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginRight="@dimen/spacing_large" />

                </LinearLayout>

            </com.be_a_hero.app.widget.MaterialRippleLayout>

        </LinearLayout>

    </LinearLayout>

</layout>
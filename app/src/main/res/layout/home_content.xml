<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription,MissingPrefix,UseCompoundDrawables,TooDeepLayout,HardcodedText,RtlSymmetry,TextFields,UselessLeaf,UnusedAttribute">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleEnabled="false"
                app:toolbarId="@+id/toolbar"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="none"
                    android:fitsSystemWindows="true"
                    android:layout_margin="@dimen/spacing_mlarge">

                    <android.support.v7.widget.CardView
                        android:id="@+id/donors_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="true"
                        android:layout_alignParentTop="true"
                        app:contentPadding="@dimen/spacing_large"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="@dimen/spacing_mmiddle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false"
                            android:paddingTop="@dimen/spacing_large"
                            android:paddingBottom="@dimen/spacing_large">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/donor_totals_text_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="120966"
                                    android:textSize="26sp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:letterSpacing="0.10"
                                    android:layout_alignParentTop="true"
                                    android:textColor="@android:color/white"
                                    app:fontFamily="@fonts/montserrat_light" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Donors"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:letterSpacing="0.10"
                                    android:textColor="@android:color/white"
                                    app:fontFamily="@fonts/montserrat_light"
                                    android:layout_below="@+id/donor_totals_text_view" />

                            </RelativeLayout>

                            <com.be_a_hero.app.widget.MaterialRippleLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.25"
                                style="@style/RippleStyleBlack"
                                android:layout_marginLeft="@dimen/spacing_mmiddle"
                                android:layout_marginStart="@dimen/spacing_mmiddle">

                                <Button
                                    android:id="@+id/button_find_donor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Find Donor"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    app:fontFamily="@fonts/montserrat_bold"
                                    android:paddingTop="@dimen/spacing_mmiddle"
                                    android:textColor="@color/be_hero_dark_grey"
                                    android:paddingBottom="@dimen/spacing_mmiddle"
                                    android:background="@drawable/round_white_button_bg"/>

                            </com.be_a_hero.app.widget.MaterialRippleLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/requests_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="@dimen/spacing_large"
                        android:layout_below="@+id/donors_card_view"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="@dimen/spacing_mmiddle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false"
                            android:paddingTop="@dimen/spacing_large"
                            android:paddingBottom="@dimen/spacing_large">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/requests_totals_text_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="20976"
                                    android:textSize="26sp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:letterSpacing="0.10"
                                    android:layout_alignParentTop="true"
                                    android:textColor="@android:color/white"
                                    app:fontFamily="@fonts/montserrat_light" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Requests"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:letterSpacing="0.10"
                                    android:textColor="@android:color/white"
                                    app:fontFamily="@fonts/montserrat_light"
                                    android:layout_below="@+id/requests_totals_text_view" />

                            </RelativeLayout>

                            <com.be_a_hero.app.widget.MaterialRippleLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.25"
                                style="@style/RippleStyleBlack"
                                android:layout_marginLeft="@dimen/spacing_mmiddle"
                                android:layout_marginStart="@dimen/spacing_mmiddle">

                                <Button
                                    android:id="@+id/button_view_totals"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:text="See Request"
                                    app:fontFamily="@fonts/montserrat_bold"
                                    android:paddingTop="@dimen/spacing_mmiddle"
                                    android:textColor="@color/be_hero_dark_grey"
                                    android:paddingBottom="@dimen/spacing_mmiddle"
                                    android:background="@drawable/round_white_button_bg"/>

                            </com.be_a_hero.app.widget.MaterialRippleLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

            <RelativeLayout
                android:id="@+id/home_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_large"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/explore_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="Explore Latest Feed"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/be_hero_dark"
                    app:fontFamily="@fonts/montserrat_bold"
                    android:layout_marginLeft="@dimen/spacing_mmiddle"
                    android:layout_marginStart="@dimen/spacing_mmiddle" />

                <com.be_a_hero.app.widget.MaterialRippleLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/RippleStyleBlack"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/post_update_image_view"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_add"
                            android:padding="@dimen/space_6"
                            android:background="@drawable/bg_circle" />

                        <TextView
                            android:id="@+id/post_update_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Post Update"
                            app:fontFamily="@fonts/montserrat_bold"
                            android:textColor="@color/be_hero_dark_grey"
                            android:layout_marginLeft="@dimen/spacing_mmiddle"
                            android:layout_marginRight="@dimen/spacing_mmiddle"
                            android:background="@drawable/round_white_button_bg"/>

                    </LinearLayout>

                </com.be_a_hero.app.widget.MaterialRippleLayout>

            </RelativeLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="24sp"
                android:lineSpacingExtra="8dp"
                android:text="@string/long_lorem_ipsum" />

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

</layout>